<?xml version="1.0" ?>
<odoo>

    <!-- Mail template are declared in a NOUPDATE block
         so users can freely customize/delete them -->
    <data noupdate="1">
        <!-- Material Requisition Email Template -->
        <record id="email_template_material_requisition" model="mail.template">
            <field name="name">Material Requisition: Request Notification</field>
            <field name="model_id" ref="mateiral_requisition.model_material_requisition"/>
            <field name="email_from">{{ (object.employee_id.user_id.email_formatted or user.email_formatted) }}</field>

            <field name="subject">{{ 'Material Requisition - Request Notification' }}</field>
            <field name="email_to">${{object.partner_id.email}}</field>

            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        Dear <t t-out="object.department_id.manager_id.name or ''">Manager</t>,
                        <br/>
                        <br/>
                        A material requisition request has been sent by
                        <t t-out="object.employee_id.name or ''">Employee Name</t>.
                        <br/>
                        <br/>
                        Details:
                        <ul>
                            <li>Employee: <t t-out="object.employee_id.name or ''">Employee Name</t></li>
                            <li>Department: <t t-out="object.department_id.name or ''">Department Name</t></li>
                            <li>Requisition Date: <t t-out="object.requisition_date or ''">Date</t></li>
                            <li>Project: <t t-out="object.project_id.name or ''">Project Name</t></li>
                        </ul>
                        <br/>
                        Please review and take necessary actions.
                        <br/>
                        <br/>
                        Regards,
                        <br/>
                        Your Company
                    </p>
                </div>
            </field>
            <field name="report_name">Material_Requisition_{{ (object.sequence or '').replace('/','_') }}</field>
            <field name="lang">{{ object.employee_id.lang }}</field>
            <field name="auto_delete" eval="True"/>
        </record>
    </data>
</odoo>
