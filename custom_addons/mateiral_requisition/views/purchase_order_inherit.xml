<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Inherit the purchase order form view -->
        <record id="purchase_order_inherit_form" model="ir.ui.view">
            <field name="name">purchase.order.inherit.form</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">

                <!-- Add your custom fields or modifications here -->
                <xpath expr="//button[@name='print_quotation']" position="after">
                     <button name="send_for_approval" type="object" string="Send For Approval"
                        class="oe_highlight" style="background-color:#478C5C;"

                />
                </xpath>

            </field>
        </record>
    </data>
</odoo>