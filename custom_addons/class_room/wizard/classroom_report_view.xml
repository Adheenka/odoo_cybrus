<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

        <!-- Wizard view for report generation -->
        <record id="view_classroom_report_wizard_form" model="ir.ui.view">
            <field name="name">classroom.report.form</field>
            <field name="model">classroom.report</field>
            <field name="arch" type="xml">
                <form string="Generate Report">
                    <group>
                        <field name="classroom_id"/>
                        <field name="to_date"/>
                        <field name="from_date"/>

                    </group>
                    <footer>
                        <button string="Generate Report" class="oe_highlight" type="object" name="generate_report"/>
                        <button string="Cancel" class="oe_secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>






    <record id="action_print_report" model="ir.actions.act_window">
        <field name="name">classroom</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">classroom.report</field>
        <field name="view_mode">form</field>
         <field name="view_id" ref="view_generate_report_wizard_form"/>

        <field name="target">new</field>
    </record>

</odoo>