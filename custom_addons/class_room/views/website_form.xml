<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Index -->
    <record id="menu_student_form12" model="website.menu">
        <field name="name">Create Student</field>
        <field name="url">/student_webform</field>
        <field name="parent_id" ref="website.main_menu"/>
        <field name="sequence">50</field>
    </record>
    <template id="create_student" name="Create student">
        <t t-call="website.layout">
            <div id="wrap">
                <div class="oe_structure">
                    <div class="container">
                        <form role="form" action="/create/webstudent" method="POST">
                            <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                            <div class="form-group">
                                <label for="student_name" class="control-label">Your Name</label>
                                <input type="text" name="student_name" t-att-value="student_name" id="student_name"
                                       class="form-control" placeholder="e.g. John Doe" required="required"/>
                            </div>
                            <div class="form-group">
                                <label for="email" class="control-label">Your Email</label>
                                <input type="email" name="email" t-att-value="email" id="email"
                                       class="form-control" required="required"/>
                            </div>
                            <div class="clearfix oe_login_buttons">
                                <button type="submit" class="btn btn-primary pull-left">Create Student</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </t>
    </template>

    <record id="student_thanks" model="website.page">
        <field name="name">Thanks</field>
        <field name="type">qweb</field>
        <field name="url">/student-thank-you</field>
        <field name="website_published">True</field>
        <field name="key">class_room.student_thanks</field>
        <field name="arch" type="xml">
            <t name="thanks" t-name="class_room.student_thanks">
                <t t-call="website.layout">
                    <div id="wrap">
                        <div class="container">
                            <h1>Thanks!</h1>
                            <div class="row">
                                <div class="col-lg-8">
                                    <div class="alert alert-success" role="status">
                                        Your email and phone no verifiyed
                                    </div>
                                    <p>
                                        We will get back to you shortly.
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </field>
    </record>


</odoo>
