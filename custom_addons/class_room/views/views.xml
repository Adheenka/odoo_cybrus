<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Classroom View -->
        <record model="ir.ui.view" id="view_classroom_form">
            <field name="name">classroom.form</field>
            <field name="model">school_management.classroom</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="dob"/>
                            <field name="age"/>
                            <field name="address"/>
                            <field name="total"/>
                            <field name="average"/>
                            <field name="marklist">
                                <tree>
                                    <field name="exam_name"/>
                                    <field name="subject_1"/>
                                    <field name="subject_2"/>
                                    <field name="subject_3"/>
                                    <field name="subject_4"/>
                                </tree>
                            </field>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="action_school_management_classroom" model="ir.actions.act_window">
            <field name="name">student</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">school_management.classroom</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{ }</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your firest student
                </p>
            </field>
        </record>
        <menuitem
                id="menu_classroom"
                name="student"
                parent="menu_classroom_master"
                action="action_school_management_classroom"
                sequence="0"/>

    </data>
</odoo>
