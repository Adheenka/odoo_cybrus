<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_classroom_details">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <div class="page">
                        <div class="oe structure"/>
                        <div class="text-center">
                            <h2>Classroom Report</h2>
                        </div>
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>SONO</th>
                                    <th>Name</th>
                                    <th>Total Marks</th>
                                    <th>Date</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td><t t-esc="doc.sequence"/></td>
                                    <td><t t-esc="doc.name"/></td>
                                    <td><t t-esc="doc.total_marks_all"/></td>
                                    <td><t t-esc="doc.report_date"/></td>
                                </tr>
                                <t t-foreach="doc.students" t-as="student">
                                    <tr>
                                        <td><t t-esc="student.sequence"/></td>
                                        <td><t t-esc="student.name"/></td>
                                        <td><t t-esc="student.total_marks"/></td>
                                        <td><t t-esc="student.report_date"/></td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>

