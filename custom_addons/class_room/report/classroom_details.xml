<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_classroom_details">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <div class="oe structure"/>
                    <div class="text-center">
                        <h2>Classroom Details</h2>
                    </div>
                    <table>
                        <tr>
                            <td>Sequence</td>
                            <td>:</td>
                            <td><t t-esc="doc.sequence"/></td>
                        </tr>
                        <tr>
                            <td>Classroom Name</td>
                            <td>:</td>
                            <td><t t-esc="doc.name"/></td>
                        </tr>
                        <tr>
                            <td>Date</td>
                            <td>:</td>
                            <td><t t-esc="doc.report_date"/></td>
                        </tr>
                        <tr>
                            <td>Total Marks</td>
                            <td>:</td>
                            <td><t t-esc="doc.total_marks_all"/></td>
                        </tr>
                    </table>
                    <br/>
                    <table class="table table-bordered at32">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Date of Birth</th>
                                <th>Age</th>
                            </tr>
                        </thead>
                        <t t-foreach="doc.students" t-as="student">
                            <tr>
                                <td><t t-esc="student.name"/></td>
                                <td><t t-esc="student.dob"/></td>
                                <td><t t-esc="student.age"/></td>
                            </tr>
                        </t>
                    </table>
                </div>
            </t>
        </t>
    </template>


</odoo>

