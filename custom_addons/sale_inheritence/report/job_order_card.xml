<?xml version="1.0" encoding="utf-8"?>




<odoo>
    <template id="report_job_order">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="job-order-card">
                        <div class="header">
                            <div class="logo">
                                <img src="/sale_inheritence/static/src/img/logo.png" alt="Logo"/>
                            </div>
                            <div class="company-details">
                                <h2>Abrus Network</h2>
                                <p>ABU DHABI, TRUCK ROAD, NEAR COMPOST PLANT, AL AIN-64526</p>
                                <p>TEL: (03) 7331915. MOB: 0555657977</p>
                                <p>EMAIL accountant agaco. TRN 100302809700002</p>
                            </div>
                        </div>
                        <div class="body">

                            <div class="job-order-info">
                                <h2>SALES ORDER</h2>
                                <p>
                                    <strong>Reference:</strong> <span t-field="o.job_no"/>
                                </p>
                                <p>
                                    <strong>Project:</strong> <span t-field="o.customer_name"/>
                                </p>
                                <p>
                                    <strong>Date:</strong> <span t-field="o.date"/>
                                </p>
                            </div>
                            <div class="job-order-lines">
                                <h2>Job Order Lines</h2>
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th>Colour Name</th>
                                            <th>Job No</th>
                                            <th>Product</th>
                                            <th>Quantity</th>
                                            <th>Price Total</th>
                                            <th>Tax Amount</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr t-foreach="o.sale_order_line_ids" t-as="line">
                                            <td>
                                                <span t-field="line.colour_name"/>
                                            </td>
                                            <td>
                                                <span t-field="line.job_no"/>
                                            </td>
                                            <td>
                                                <span t-field="line.product_id"/>
                                            </td>
                                            <td>
                                                <span t-field="line.quantity"/>
                                            </td>
                                            <td>
                                                <span t-field="line.price_total"/>
                                            </td>
                                            <td>
                                                <span t-field="line.tax_amount"/>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                            <div class="estimation-lines">
                                <h2>Estimation Lines</h2>
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th>Seq</th>
                                            <th>Description</th>
                                            <th>Width</th>
                                            <th>Length</th>
                                            <th>Quantity</th>
                                            <th>Area</th>
                                            <th>Total</th>
                                            <th>Job Number</th>
                                            <th>Colour</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr t-foreach="o.estimation_line_ids" t-as="estimation">
                                            <td>
                                                <span t-field="estimation.seq"/>
                                            </td>
                                            <td>
                                                <span t-field="estimation.description"/>
                                            </td>
                                            <td>
                                                <span t-field="estimation.width"/>
                                            </td>
                                            <td>
                                                <span t-field="estimation.length"/>
                                            </td>
                                            <td>
                                                <span t-field="estimation.quantity"/>
                                            </td>
                                            <td>
                                                <span t-field="estimation.area"/>
                                            </td>
                                            <td>
                                                <span t-field="estimation.total"/>
                                            </td>
                                            <td>
                                                <span t-field="estimation.job_number"/>
                                            </td>
                                            <td>
                                                <span t-field="estimation.color"/>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div class="footer">
                            <p>
                                <span style="float: left;">Prepared By:</span>
                                <span style="float: right;">Approved By:</span>
                            </p>
                            <p>
                                <span style="float: left;">(Signature)</span>
                                <span style="float: right;">(Signature)</span>
                            </p>
                        </div>
                    </div>
                </t>
            </t>
        </t>
        <style>
            .job-order-card {
                width: 700px;
                margin: 0 auto;
            }
            .header {
                display: flex;
                align-items: center;
                padding: 15px;
            }
            .logo {
                width: 100px;
                height: 100px;
            }
            .company-details {
                margin-left: 20px;
            }
            .body {
                padding: 15px;
            }
            .job-order-info {
                font-size: 20px;
            }
            .job-order-lines,
            .estimation-lines {
                margin-top: 20px;
            }
            .footer {
                padding: 15px;
                text-align: center;
            }
            table {
                width: 100%;
                border-collapse: collapse;
            }
            table th,
            table td {
                border: 1px solid black;
                padding: 5px;
            }
        </style>
    </template>
</odoo>

