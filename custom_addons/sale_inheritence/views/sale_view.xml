<?xml version="1.0" encoding="UTF-8" ?>


<odoo>
    <data>
        <!-- Define the tree view for your custom model -->
        <record model="ir.ui.view" id="view_sale_tree">
            <field name="name">sale.tree</field>
            <field name="model">sale</field>

            <field name="arch" type="xml">
                <tree export_xlsx="0">
                    <field name="sequence"/>
                    <field name="customer_name"/>
                    <field name="creation_date"/>
                    <field name="estimation_ids"/>

                </tree>
            </field>
        </record>

        <!-- Define the form view for your custom model -->
        <record model="ir.ui.view" id="view_sale_form">
            <field name="name">sale.form</field>
            <field name="model">sale</field>

            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="convert_to_quotation" string="Convert to Quotation" type="object" class="btn-primary"/>
                    </header>
                    <group>
                        <group>
                            <field name="sequence"/>
                            <field name="customer_name"/>
                        </group>
                        <group>
                            <field name="creation_date"/>




                        </group>
                    </group>
                    <sheet>

                        <notebook>

                            <page string="Estimation" name="estimation">
                                <field name="estimation_ids">
                                    <tree editable="bottom">
                                        <field name="sequence"/>
                                        <field name="description"/>
                                        <field name="width"/>
                                        <field name="length"/>

                                        <field name="quantity"/>
                                        <field name="area"/>
                                        <field name="total"/>

                                    </tree>
                                    <form>
                                        <group>
                                            <field name="sequence"/>
                                            <field name="description"/>
                                            <field name="width"/>
                                            <field name="length"/>
                                            <field name="area"/>
                                            <field name="quantity"/>
                                            <field name="area"/>
                                            <field name="total"/>
                                        </group>

                                    </form>
                                </field>

                            </page>
                        </notebook>

                    </sheet>
                </form>
            </field>
        </record>

        <!-- Define the action for your custom model -->
        <record model="ir.actions.act_window" id="action_sale">
            <field name="name">sale</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sale</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your firest sale
                </p>
            </field>
        </record>

        <!-- Define the menu item for your custom model -->
        <menuitem id="menu_sale"
                  action="action_sale"
                  parent="sale.sale_menu_root"
                  name="Estimations"/>
    </data>
</odoo>
