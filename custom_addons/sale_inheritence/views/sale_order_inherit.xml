<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

        <record id="view_order_form_inherit" model="ir.ui.view">
            <field name="name">sale.order.inherit</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
<!--       button code-->
              <xpath expr="//header/button[@name='action_confirm']" position="replace">
                <button name="action_create_job_order" string="Confirm Job Order" type="object"/>
            </xpath>


<!--     task 8 code Quantity string name change-->
                <xpath expr="//field[@name='order_line']/tree/field[@name='product_uom_qty']" position="attributes">
                    <attribute name="string">sqmt</attribute>
                </xpath>
                 <xpath expr="//field[@name='order_line']/tree/field[@name='product_uom_qty']" position="after">
                    <field name="quantity"/>
                </xpath>
                  <xpath expr="//field[@name='order_line']/tree/field[@name='tax_id']" position="after">
                    <field name="price_total"/>

                </xpath>
                <xpath expr="//field[@name='order_line']/tree/field[@name='price_subtotal']" position="replace" invisible="1">

                </xpath>
                <xpath expr="//field[@name='order_line']/tree/field[@name='product_id']" position="before">
                       <field name="seq"/>
                </xpath>




<!--tast 7 code-->

                <xpath expr="//field[@name='payment_term_id']" position="after">
                    <field name="related_estimation"/>

                </xpath>

                <notebook position="inside">
                    <page string="Estimation Details">
                        <field name="estimation_line_ids">
                            <field name="estimation_line_ids">
                                <tree editable="bottom">
                                    <field name="seq"/>
                                    <field name="description"/>
                                    <field name="width"/>
                                    <field name="length"/>

                                    <field name="quantity"/>
                                    <field name="area"/>
                                    <field name="total"/>

                                </tree>
                                <form>
                                    <group>
                                        <field name="seq"/>
                                        <field name="description"/>
                                        <field name="width"/>
                                        <field name="length"/>
                                        <field name="area"/>
                                        <field name="quantity"/>
                                        <field name="area"/>
                                        <field name="total"/>
                                    </group>

                                </form>
                            </field>

                        </field>

                    </page>
                </notebook>

            </field>
        </record>
    </data>

</odoo>
