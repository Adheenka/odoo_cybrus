<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="delivery_details_popup">
        <div class="popup delivery-details-popup">
            <header class="title">
                Enter Delivery Details
            </header>
            <main class="body">
                <!-- Add your form fields for delivery details here -->
                <div class="form-group">
                    <label for="deliveryCountry">Delivery Country:</label>
                    <select id="deliveryCountry" t-model="selectedCountry">
                        <option value="country1">Country 1</option>
                        <option value="country2">Country 2</option>
                        <!-- Add more countries as needed -->
                    </select>
                </div>
                <div class="form-group">
                    <label for="deliveryType">Delivery Type:</label>
                    <select id="deliveryType" t-model="selectedType">
                        <option value="standard">Standard</option>
                        <option value="express">Express</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="expectedDeliveryDate">Expected Delivery Date:</label>
                    <input type="date" id="expectedDeliveryDate" t-model="selectedDate"/>
                </div>
            </main>
            <footer class="footer">
                <div class="button cancel" t-on-click="cancel">
                    Cancel
                </div>
                <div class="button save" t-on-click="save">
                    Save
                </div>
            </footer>
        </div>
    </t>
</templates>


























