<templates id="template" xml:space="preserve">
    <t t-extend="OrderReceipt"  >
        <t t-jquery=".pos-receipt .pos-receipt-contact" t-operation="append">
            <t t-if='receipt.client'>
             <t t-attf-if="receipt.client and widget.pos.get_client().dob">
                <div style="font-weight:bold;">dob: <t t-esc="receipt.client + ' ' + widget.pos.get_client().dob"/></div>
             </t>
            </t>
        </t>
    </t>
</templates>
